<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <job id="offenderValidationJob" xmlns="http://www.springframework.org/schema/batch">
        <step id="offenderDBStep" next="processNonOffenderClaims">
            <tasklet transaction-manager="transactionManager" >
                <chunk reader="offenderReader" writer="offenderWriter" commit-interval="100">
                </chunk>
            </tasklet>
        </step>
        <step id="processNonOffenderClaims" >
            <tasklet ref="nonOffenderClaimProcessor" />
        </step>
    </job>

    <bean id="offenderReader" class="com.bfds.ach.calc.offenderValidation.batch.OffenderJdbcPagingItemReader" scope="step">
        <property name="dataSource" ref="offenderDataSource" />
        <property name="pageSize" value="100"/>
        <property name="queryProvider">
            <bean class="org.springframework.batch.item.database.support.SqlPagingQueryProviderFactoryBean" scope="step" >
                <property name="dataSource" ref="offenderDataSource" />
                <property name="selectClause" value="*" />
                <property name="fromClause">
                    <value>
                        (select o.first_name, o.last_name, o.ssn, o.tin,
                        oa.address1, oa.city, oa.state_code
                        from offender o left outer join offender_addr oa
                        on oa.offender_fk = o.id
                        )  O
                    </value>
                </property>
                <property name="sortKey" value="first_name" />
            </bean>
        </property>
        <property name="rowMapper">
            <bean class="com.bfds.ach.calc.offenderValidation.batch.OffenderRowMapper" />
        </property>
        <property name="chunkPreProcessor" ref="offenderChunkProcessor" />
    </bean>

    <bean id="offenderChunkProcessor" class="com.bfds.ach.calc.offenderValidation.batch.ChunkPreProcessorImpl" scope="step">
        <constructor-arg index="0" type="java.lang.String" value="#{jobParameters[T(com.bfds.ach.calc.Constants).PROCESS_STATUS]}"/>
    </bean>

    <bean id="offenderWriter" class="com.bfds.ach.calc.offenderValidation.batch.OffenderWriter" scope="step">
        <property name="chunkPreProcessor" ref="offenderChunkProcessor" />
    </bean>

    <bean id="nonOffenderClaimProcessor" class="com.bfds.ach.calc.offenderValidation.batch.NonOffenderClaimProcessor" scope="step">
        <constructor-arg index="0" type="java.lang.String" value="#{jobParameters[T(com.bfds.ach.calc.Constants).PROCESS_STATUS]}"/>
        <constructor-arg index="1" type="java.lang.String" value="#{jobParameters[T(com.bfds.ach.calc.Constants).SUCCESS_PROCESS_STATUS]}"/>
    </bean>

</beans>

