<?xml version="1.0" encoding="UTF-8"?>
<included>

    <appender name="offender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logs.dir}/logs/ach/aach-offender.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logs.dir}/logs/ach/aach-offender-%d{yyyyMMdd}.%i.log.zip</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 100MB -->
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%date [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

	<logger name="com.bfds.ach.calc.offenderValidation" level="debug" additivity="false">
	    <appender-ref ref="offender" />
	</logger>

</included>